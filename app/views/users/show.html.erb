<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>
<br>
<br>
<h1>ユーザーの投稿一覧</h1>
<% @user.books.each do |t| %>
<a href="/users/<%= t.user.id %>">
    <%= t.user.name %></a>
    <%= t.title %>
<% end %>
<br>
<br>
<h1>ユーザーがいいねした投稿一覧</h1>
<% @user.liked_books.each do |t| %>
  <a href="/users/<%= t.user.id %>">
    <%= t.user.name %></a>
    <%= t.title %>
<% end %>

<br>
<br>
<br>
<%= link_to "本一覧に戻る", books_path %>