<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

<div class="form-wrapper">
  <div class="field">
  <br>
    <h1>プロフィール更新</h1>
    <form>
   <div class="form-item">
     <div class="field">
     <h3>
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </h3>
    </div>

  <div class="form-item">
  <h3>
    <%= f.label :profile, "プロフィール" %><br />
    <%= f.text_area :profile, autofocus: true,class: "hoge", size: "140x6" %>
  </h3>
  </div>

  <div class="form-item">
  <h3>
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </h3>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-item">
   <h3>
    <%= f.label :password, "新しいパスワード" %> <i>（変更しない場合は空欄で）</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </h3>
  </div>

  <div class="form-item">
   <h3>
    <%= f.label :password_confirmation, "パスワードをもう一度入力してください" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </h3>
  </div>

  <div class="form-item">
   <h3>
    <%= f.label :current_password, "現在のパスワード" %> <i>（変更するには現在のパスワードが必要です）</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </h3>
  </div>
  </form>
  </div>
</div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  <% end %>

  <h3>アカウント解約</h3>
    <%= button_to "退会する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <h3>
    <%= link_to "マイページに戻る", :back %>
  </h3>
  <br>
  <br>
